{% set levels = { "error": "danger", "success": "success", "warning": "warning", "info": "info" } %}
{% for level, alert in levels %}
  {% if app.session.flashbag.has(level) %}
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="alert alert-dismissable alert-{{ alert }}">
              <button type="button" class="close" data-dismiss="alert">Ã—</button>
              <ul class="list-unstyled">
    {% for message in app.session.getFlashBag.get(level) %}
              <li>{{ message }}</li>
    {% endfor %}
              </ul>
            </div>
          </div>
        </div>
  {% endif %}
{% endfor %}
